{
    "env": {
      "browser": true,
      "es6": true,
      "jest": true
    },
    "parser": "babel-eslint",
    "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module"
    },
    "extends": ["airbnb-base"],
    "rules": {
      "no-shadow": "off",
      "no-param-reassign": "off",
      "no-plusplus": "off",
      "eol-last": "off",
      "arrow-parens": "off",
      "class-methods-use-this": "off",
      "no-use-before-define": "off",
      "func-names": "off",
      "radix": "off",
      "max-len": [2, {"code": 150}],
      "import/prefer-default-export": "off"
    },
    "ignorePatterns": [
      "dist/",
      "build/"
    ]
  }